#:kivy 2.0.0

<Token>:

<Poker>:
    black_token: black
    orange_token: orange
    green_token: green
    yellow_token: yellow
    blue_token: blue
    money_label: money
    Token:
        id: black
        Image:
            source: 'images/black.png'
            size: self.texture_size
            pos_hint: {"center_x": .2, "center_y": .8}
        MDLabel:
            text: str(root.black_token.value)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .2, "center_y": .8}
        MDIconButton:
            icon: "minus"
            pos_hint: {"center_x": .15, "center_y": .62}
            on_press: root.count_minus_one(root.black_token)
        MDLabel:
            text: str(root.black_token.count)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .2, "center_y": .62}
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .25, "center_y": .62}
            on_press: root.count_plus_one(root.black_token)
    Token:
        id: orange
        Image:
            source: 'images/orange.png'
            size: self.texture_size
            pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            text: str(root.orange_token.value)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .5, "center_y": .8}
        MDIconButton:
            icon: "minus"
            pos_hint: {"center_x": .45, "center_y": .62}
            on_press: root.count_minus_one(root.orange_token)
        MDLabel:
            text: str(root.orange_token.count)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .5, "center_y": .62}
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .55, "center_y": .62}
            on_press: root.count_plus_one(root.orange_token)
    Token:
        id: green
        Image:
            source: 'images/green.png'
            size: self.texture_size
            pos_hint: {"center_x": .8, "center_y": .8}
        MDLabel:
            text: str(root.green_token.value)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .8, "center_y": .8}
        MDIconButton:
            icon: "minus"
            pos_hint: {"center_x": .75, "center_y": .62}
            on_press: root.count_minus_one(root.green_token)
        MDLabel:
            text: str(root.green_token.count)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .8, "center_y": .62}
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .85, "center_y": .62}
            on_press: root.count_plus_one(root.green_token)
    Token:
        id: yellow
        Image:
            source: 'images/yellow.png'
            size: self.texture_size
            pos_hint: {"center_x": .35, "center_y": .4}
        MDLabel:
            text: str(root.yellow_token.value)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .35, "center_y": .4}
        MDIconButton:
            icon: "minus"
            pos_hint: {"center_x": .30, "center_y": .22}
            on_press: root.count_minus_one(root.yellow_token)
        MDLabel:
            text: str(root.yellow_token.count)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .35, "center_y": .22}
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .40, "center_y": .22}
            on_press: root.count_plus_one(root.yellow_token)
    Token:
        id: blue
        Image:
            source: 'images/blue.png'
            size: self.texture_size
            pos_hint: {"center_x": .65, "center_y": .4}
        MDLabel:
            text: str(root.blue_token.value)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .65, "center_y": .4}
        MDIconButton:
            icon: "minus"
            pos_hint: {"center_x": .60, "center_y": .22}
            on_press: root.count_minus_one(root.blue_token)
        MDLabel:
            text: str(root.blue_token.count)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": .65, "center_y": .22}
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": .70, "center_y": .22}
            on_press: root.count_plus_one(root.blue_token)
    MDLabel:
        id: money
        halign: "center"
        valign: "center"
        pos_hint: {"center_x": .8, "center_y": .1}
        text: "money: " + str(root.money_sum())
               
<Hands>:
    Image:
        source: 'images/hands.jpg'
        size: self.texture_size
        pos_hint: {"center_x": .5, "center_y": .5}


<TokenSettings>:
    MDCard:
        orientation: "vertical"
        size_hint: .4, .8
        pos_hint: {"center_x": .5, "center_y": .5}
        MDFloatLayout:
            MDLabel:
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .5, "center_y": .90}
                text: "token values"
            MDLabel:
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .3, "center_y": .75}
                text: "black"
            MDIconButton:
                icon: "minus"
                pos_hint: {"center_x": .6, "center_y": .75}
                on_press: root.decrease_value(0)
            MDLabel:
                text: str(root.values[0]/100)
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .7, "center_y": .75}
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .8, "center_y": .75}
                on_press: root.increase_value(0)
            MDLabel:
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .3, "center_y": .65}
                text: "orange"
            MDIconButton:
                icon: "minus"
                pos_hint: {"center_x": .6, "center_y": .65}
                on_press: root.decrease_value(1)
            MDLabel:
                text: str(root.values[1]/100)
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .7, "center_y": .65}
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .8, "center_y": .65}
                on_press: root.increase_value(1)
            MDLabel:
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .3, "center_y": .55}
                text: "green"
            MDIconButton:
                icon: "minus"
                pos_hint: {"center_x": .6, "center_y": .55}
                on_press: root.decrease_value(2)
            MDLabel:
                text: str(root.values[2]/100)
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .7, "center_y": .55}
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .8, "center_y": .55}
                on_press: root.increase_value(2)
            MDLabel:
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .3, "center_y": .45}
                text: "yellow"
            MDIconButton:
                icon: "minus"
                pos_hint: {"center_x": .6, "center_y": .45}
                on_press: root.decrease_value(3)
            MDLabel:
                text: str(root.values[3]/100)
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .7, "center_y": .45}
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .8, "center_y": .45}
                on_press: root.increase_value(3)
            MDLabel:
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .3, "center_y": .35}
                text: "blue"
            MDIconButton:
                icon: "minus"
                pos_hint: {"center_x": .6, "center_y": .35}
                on_press: root.decrease_value(4)
            MDLabel:
                text: str(root.values[4]/100)
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": .7, "center_y": .35}
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_x": .8, "center_y": .35}
                on_press: root.increase_value(4)
            MDRectangleFlatButton:
                text: "reset all"
                pos_hint: {"center_x": .3, "center_y": .2}
                on_press: root.values = [0,0,0,0,0]       
            MDRectangleFlatButton:
                text: "confirm"
                pos_hint: {"center_x": .7, "center_y": .2}
                on_press: app.get_token_values(root.values)

        
MDBottomNavigation:
    poker: poker
    MDBottomNavigationItem:
        text: "main"
        name: "main_screen"
        on_enter: app.set_token_values(root.poker)
        Poker:
            id: poker
    MDBottomNavigationItem:
        text: "settings"
        name: "settings_screen"
        TokenSettings:
    MDBottomNavigationItem:
        text: "show hands"
        name: "hands_screen"
        Hands:           

        

